@model Books

<div class="col-sm-3 col-lg-3 col-md-3">
    <div class="thumbnail">
        <img src="@Model.ImageUrl" alt="Picture of @Model.Name" height="200" width="200">
        <div class="caption" >
           
            <h3>
                <a asp-controller="Books" asp-action="DisplayDetails" asp-route-id="@Model.Id">@Model.Name</a>
            </h3>
             
            <h5><b>Category: @Model.Category.Name</b></h5>
            <p >@Model.Description</p>
            <h3 class="pull-right">@Model.Price.ToString(".тг")</h3>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-bookId="@Model.Id">Add Book</a>
            </p>
        </div>
    </div>
</div>
