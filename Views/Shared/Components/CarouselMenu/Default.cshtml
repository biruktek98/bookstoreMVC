@model IEnumerable<Books>
    

<div class="row carousel-holder" align="center">
    <div class="col-md-12">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                @foreach (var book in Model)
                {
                    <li data-target="#carousel-example-generic" data-slide-to="@book.Id"></li>
                }
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <div class="text-center"><b>Weekly Specials!</b></div>
                    <img class="slide-image" src="https://i0.wp.com/hddesktopwallpapers.in/wp-content/uploads/2015/07/harry-potter-wallpaper-hogwarts.jpg?resize=720%2C405" alt="Home page picture">
                </div>
                @foreach (var book in Model)
                {
                <div class="item">
                    <div class="text-center"><b>@book.Name</b></div>
                    <a asp-controller="Books" asp-action="DisplayDetails" asp-route-id="@book.Id"> 
                        <img class="slide-image" src="@book.ImageUrl" alt="Picture of @book.Name">
                    </a>
                </div>
                }
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>
</div>

